<!--DROP SCHEMA PUBLIC CASCADE - drop all tables in DB usable for tests-->
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

        <!--xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-configuration/hibernate-configuration-4.0.xsd"-->

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <!--<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>-->

        <!-- Enable the second-level cache  -->
        <!--<property name="cache.use_second_level_cache">true</property>-->
        <!--<property name="cache.provider_class">org.hibernate.cache.internal.EhCacheProvider</property> &lt;!&ndash;&ndash;&gt;-->

        <!-- Enable Query cache-->
        <!--<property name="hibernate.cache.use_query_cache">true</property>-->

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup (values = [create, update])-->
        <property name="hbm2ddl.auto">create</property>
        <mapping class="ru.logistica.tms.dao.Point"/>

        <!-- ADD THIS CLASSES IN RUNTIME BY MEANS OF addAnnotatedClass() method in Configuration class for test reason.-->
        <!-- Names the annotated entity class -->
        <!--<mapping class="me.hibernate.OneToOneMapping.User"/>-->
        <!--<mapping class="me.hibernate.OneToOneMapping.Vehicle"/>-->
        <!--<mapping class="me.hibernate.OneToManyMapping.User"/>-->
        <!--<mapping class="me.hibernate.OneToManyMapping.Vehicle"/>-->

    </session-factory>
</hibernate-configuration>
